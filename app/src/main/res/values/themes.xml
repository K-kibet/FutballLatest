<resources>
    <!-- Base application theme. -->
    <style name="Theme.FootballLatest" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/dark_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_green</item>
        <item name="colorSecondaryVariant">@color/dark_green</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="drawerItemBackground">@color/green</item>
        <item name="drawerItemColorChecked">@color/white</item>
        <item name="drawerItemColorNormal">@color/dark</item>
        <item name="navHeaderTitleColor">@color/white</item>
        <item name="navHeaderDescriptionColor">@color/dark_green</item>
        <item name="drawerBackground">@color/white</item>
        <item name="iconColor">@color/black</item>
        <item name="bottomNav">@color/light_gray</item>
    </style>

    <style name="Theme.NavigationDrawer" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:scrollbarThumbVertical">@android:color/transparent</item>
        <item name="colorControlHighlight">@color/light_green</item>
        <item name="colorPrimary">@color/green</item>
    </style>

</resources>